        <div class="container" style="background-color: #e3f2fd; padding: 100px;">
                <h1>Agregar Productos</h1>
                <form style="padding-top: 40px;" action="/productos/lista" method="POST">
                    <div class="form-group">
                        <label for="categoria">Categoria</label>
                        <select id="categoria" class="form-control" name="categoria">
                          <option>Choose...</option>
                          <option value="lacteos">Lacteos</option>
                          <option value="Carnes">Carnes</option>
                          <option value="Harinas">Harinas</option>
                          <option value="pan">Pan</option>
                          <option value="sazonadores">Sazonadores</option>
                          <option value="higiene">Higiene personal</option>
                          <option value="bebidas">Bebidas</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Categoria</label>
                        <select disabled id="name" class="form-control" name="name">
                          <option>Choose...</option>
                          <option value="leche" class="lacteos" hidden = true>Leche</option>
                          <option value="crema" class="lacteos" hidden = true>Crema</option>
                          <option value="mantequilla" class="lacteos" hidden = true>mantequilla</option>
                          <option value="bistec" class = "carnes" hidden = true>Bistec</option>
                          <option value="milanesa" class="carnes" hidden = true>Milanesa</option>
                          <option value="pechuga" class="carnes" hidden = true>Pechuga</option>
                          <option value="pollo" class="carnes" hidden = true>Pollo Entero</option>
                          <option value="harina" class="harinas" hidden = true>Harina</option>
                          <option value="azucar" class="harinas" hidden = true>Azucar</option>
                          <option value="pan" class="pan" hidden = true>Pan</option>
                          <option value="knorr" class = "sazonadores" hidden = true>Knorr Suiza</option>
                          <option value="sal" class="sazonadores" hidden = true>Sal</option>
                          <option value="shampoo" class="higiene" hidden = true>Shampoo</option>
                          <option value="jabon" class="higiene" hidden = true>Jab√≥n</option>
                          <option value="agua" class="bebidas" hidden = true>Agua</option>
                          
                        </select>                      
                    </div>
                    <div class="form-group">
                      <input type="number" name="cantidad" step="1">
                      <select name="unidad">
                        <option value="kilos">Kg</option>
                        <option value="litros">Lts</option>
                        <option value="elementos">Elementos</option>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
                

                <script>
                 $("#categoria").on("change", function() {
                   $('#name').removeAttr("disabled");
                   //alert( $("#categoria").val() );
                   //$('.lacteos').attr("hidden", true);
                   switch($("#categoria").val()){
                     case "lacteos":
                     $('.lacteos').attr("hidden", false);
                     break;
                     case "Carnes":
                     $('.carnes').attr("hidden", false);
                     break;
                     case "Harinas":
                     $('.harinas').attr("hidden", false);
                     break;
                     case "pan":
